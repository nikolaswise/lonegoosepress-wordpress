{
  "name": "fuzzcode",
  "version": "0.0.1",
  "description": "Starter kit using NPM based on Foundation",
  "scripts": {
    "watch": "npm run build && npm run serve & npm run watch:css & npm run watch:js",
    "watch:css": "nodemon -e scss -x 'npm run build:css'",
    "watch:js": "watchify source/js/*.js -o js/bundle.js",
    "build": "npm run clean && npm run build:css && npm run build:js",
    "build:css": "node-sass source/scss/style.scss | postcss --config postcss.config.js",
    "build:js": "browserify source/js/app.js | uglifyjs -c > js/bundle.js",
    "serve": "browser-sync start --proxy 'fuzzcode.dev' --files '**/*' '*.php' --no-ghost-mode --no-notify",
    "clean": "rm -rf {style.min.css,js/bundle.js} && mkdir -p js"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.11.2",
    "browserify": "^13.0.0",
    "copy-files": "^0.1.0",
    "css-mqpacker": "^4.0.1",
    "cssnano-cli": "^1.0.3",
    "node-sass": "^3.4.2",
    "nodemon": "^1.9.1",
    "postcss-cli": "^2.5.1",
    "postcss-import": "^8.1.0",
    "postcss-reporter": "^1.3.3",
    "stylelint": "^5.4.0",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "fastclick": "^1.0.6",
    "foundation-sites": "^6.2.1",
    "jquery": "^2.2.3"
  }
}
