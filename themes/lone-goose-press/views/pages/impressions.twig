{% extends "layouts/layout.twig" %}
{% block content %}

<div class="grid-container leader-4">
  <main class="column-12 pre-6">
    <h1 class="text-center trailer-4">Impressions</h1>
      {% for post in posts %}
        <article class="trailer-4">
          <h3>
            <a href="/impressions/{{post.slug}}">{{post.title}}</a>
          </h3>
          <p class="trailer-0">{{post.author}}</p>
          <p>{{post.date | date('F jS\, Y')  }}</p>
          <p>{{post.content}}</p>
        </article>
        <hr class="trailer-4">
      {% endfor %}
  </main>
</div>
{% endblock %}