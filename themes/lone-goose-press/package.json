{
  "name": "lone-goose-press",
  "version": "2.0.0",
  "description": "",
  "scripts": {
    "start": "npm run watch",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "npm run build:watch:css && chokidar 'source/scss/' -c 'npm run build:watch:css'",
    "watch:js": "npm run build:watch:js && chokidar 'source/js/' -c 'npm run build:watch:js'",
    "build:watch:css": "node-sass --source-map-contents --source-map style.min.css.map source/scss/style.scss style.min.css && postcss --config postcss.watch.config.json",
    "build:watch:js": "rollup -c",
    "build": "npm run build:css && npm run build:js",
    "build:css": "node-sass source/scss/style.scss | postcss --config postcss.config.json",
    "build:js": "rollup -c"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "chokidar-cli": "^1.2.0",
    "cssnano-cli": "^1.0.4",
    "imagemin-newer": "^1.0.2",
    "js-yaml": "^3.10.0",
    "modular-aria": "github:nikolaswise/modular-aria",
    "modular-bus": "github:nikolaswise/modular-bus",
    "modular-class": "github:nikolaswise/modular-class",
    "modular-dom": "github:nikolaswise/modular-dom",
    "modular-event": "github:nikolaswise/modular-event",
    "modular-modal": "github:nikolaswise/modular-modal",
    "node-sass": "^4.7.2",
    "nodemon": "^1.9.1",
    "postcss": "^6.0.14",
    "postcss-cli": "^2.5.1",
    "postcss-reporter": "^1.3.3",
    "rollup": "^0.45.1",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "typecabinet": "github:nikolaswise/typecabinet",
    "urlify": "^0.3.6",
    "viewport-grid": "github:esripdx/viewport-grid",
    "whatwg-fetch": "^2.0.3"
  }
}
